
@{ Layout = "~/Views/Shared/_Layout.cshtml";}
@model ProjectGraduationK.Models.User

<h2>Профиль пользователя</h2><br />
<div class="row flex-row">
    <div class="col-xl-12">
        <div class="widget has-shadow">

            <div class="widget-body">
                <br />
                <form class="form-horizontal" method="post" action="profile">
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Имя и фамилия</label>
                        <div class="col-lg-6">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="@Model.UserName">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Email</label>
                        <div class="col-lg-6">
                            <input asp-for="Email" type="text" class="form-control" placeholder="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Телефон</label>
                        <div class="col-lg-6">
                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="@Model.PhoneNumber">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Адрес</label>
                        <div class="col-lg-6">
                            <input asp-for="Address" type="text" class="form-control" placeholder="@Model.Address">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Должность</label>
                        <div class="col-lg-6">
                            <input asp-for="Position" type="text" class="form-control" placeholder="@Model.Position">
                        </div>
                    </div>
                    <div class="form-group row d-flex align-items-center mb-5">
                        <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Дата рождения</label>
                        <div class="col-lg-6">
                            <input asp-for="BirthDate" type="text" class="form-control" placeholder="@Model.BirthDate">
                        </div>
                    </div>

                    <div class="em-separator separator-dashed"></div>
                    <div class="text-right">
                        <button class="btn btn-gradient-01" type="submit">Сохранить изменения</button>
                        <button class="btn btn-shadow" type="reset">Отменить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Row -->
